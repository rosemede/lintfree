root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 79
trim_trailing_whitespace = true

[*.py]
indent_size = off

[*.sh]
indent_size = 4

[*.md]
indent_size = off
max_line_length = off

[poetry.lock]
max_line_length = off

[COMMIT_EDITMSG]
max_line_length = 72
